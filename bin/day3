#!/usr/bin/env ruby
require_relative "../environment"

part1 answer: 7908 do
  input.lines(chomp: true).sum { Rucksack.parse(_1).priority }
end

part2 answer: 2838 do
  input.lines(chomp: true).map { Rucksack.parse(_1) }.each_slice(3).sum { Group.new(_1).priority }
end

class Group
  attr_reader :rucksacks

  def initialize(rucksacks)
    raise ArgumentError, "Expect exactly 3 rucksacks" unless rucksacks.size == 3

    @rucksacks = rucksacks
  end

  def badge = rucksacks.map(&:all).reduce(:&).first
  def priority = Item.priority(badge)
end

class Rucksack
  attr_reader :first_comp, :second_comp

  def self.parse(line)
    middle = line.size / 2 - 1
    new(line[0..middle].chars, line[middle + 1..].chars)
  end

  def initialize(first_comp, second_comp)
    @first_comp = first_comp
    @second_comp = second_comp
  end

  def all = first_comp | second_comp
  def common = first_comp & second_comp
  def priority = common.sum { Item.priority(_1) }
end

module Item
  CHAR_PRIORITIES = ["a".."z", "A".."Z"].flat_map(&:to_a).freeze

  def self.priority(char) = CHAR_PRIORITIES.index(char) + 1
end

__END__
