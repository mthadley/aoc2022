#!/usr/bin/env ruby
require_relative "../environment"

part1 answer: 1896 do
  ElfSignal.new(input).start_index
end

class ElfSignal
  attr_reader :raw

  def initialize(str) = @raw = str

  def start_index
    raw.chars.each_cons(4).with_index do |chars, index|
      return index + chars.size if chars.uniq.size == 4
    end
  end
end

__END__

